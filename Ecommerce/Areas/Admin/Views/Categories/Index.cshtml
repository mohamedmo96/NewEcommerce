@model List<Category>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Categories View </h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <a asp-action="Create" asp-controller="Categories" asp-area="Admin" 
                        class="btn btn-success"
                        >Add New Category </a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Image</th>
                            <th>Action</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CatName</td>
                                <td>
                                    <img src="~/category/@item.CatPhoto" style="width:150px; height:150px;">
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Categories" asp-route-Id="@item.CatId" class="btn btn-primary">Edit Category</a>

                                    <a asp-action="Delete" asp-controller="Categories" asp-route-Id="@item.CatId" class="btn btn-danger">Delete Category</a>
                                </td>
                            </tr>

                        }
                        
                        
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>